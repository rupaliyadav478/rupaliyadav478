import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        int num;
 System.out.println("enter the value of number");
 Scanner sc=new Scanner(System.in);
 num= sc.nextInt();
 for(int i=1;i<=num;i++){
     for(int j=1;j<=i;j++){
         if((i+j)%2==0){
    System.out.print("1"); 
         }
         else{
    System.out.print("0");
         }
     }
      System.out.print("\n");
 }
    }
}
