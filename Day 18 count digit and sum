import java.util.*;
public class Main {
	public static void main(String[] args) {
		int num,sum=0,i,j=0,digit=0,temp,k=0;
Scanner sc=new Scanner(System.in);
System.out.println("Enter number=");
num=sc.nextInt();
temp=num;
	while( num>0){
	   ++j;
	   num/=10;
	     while(temp>0){
	      digit=temp%10;
	      sum=sum+digit;
	      temp/=10;
	  }
	  }
	   System.out.println(+j+"\n"+sum);
	}
}

