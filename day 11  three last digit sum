
package sumdigit;
import java.util.*;
public class Sumdigit {

   
    public static void main(String[] args) {
       int  digit,sum=0,num=0,di=0;
       Scanner scn=new Scanner(System.in);
        System.out.println("Enter the digit:");
        digit=scn.nextInt();
        while(digit<=0){
        di%=1000;
        di%=10;
        digit=digit/10;
        sum+=num;
        }
         System.out.println("The sum of digit :"+sum);
 
