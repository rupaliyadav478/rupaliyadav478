import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
int num,sum=0; 
Scanner scn=new Scanner(System.in);
      System.out.println("Enter the number : ");
      num=scn.nextInt();
      for(int i=1;i<=num;i++)
      {
          if(i%7==0)
          
          sum=sum+i;
          
      }
System.out.println(+sum);
            }
    }
