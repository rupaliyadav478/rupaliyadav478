import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        int row;
     System.out.print("enter the vlaue of row");
     Scanner sc=new Scanner(System.in);
     row=sc.nextInt();
   for(int i=1;i<=row;i++){
       for(int j=1;j<=i;j++){
           System.out.print("*");
       }
       System.out.print("\n");
   }
   for(int i=2;i>=1;i--){
       for(int j=1;j<=i;j++){
           System.out.print("*");
       }
        System.out.print("\n");
   }
    }
}
