import java.util.*;
class countdigit{
    	
public static void main(String[] args)
{
		int N,digit=0;
		Scanner sc=new Scanner(System.in);
        System.out.println("Enter the value of N");
        N=sc.nextInt();
        if(N%2==0){
            digit+=2;
            System.out.print("count Digits = "+digit);
        }
       else{
            System.out.println("count digits = 0");
        }
	}
}
